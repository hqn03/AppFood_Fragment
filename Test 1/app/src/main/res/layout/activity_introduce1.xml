<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroduceActivity1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/img_intro1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt hàng"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                android:textStyle="bold"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm món ăn yêu thích của bạn và đặt hàng chỉ vài thao tác đơn giản"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_marginVertical="40dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/point_introduce2"/>
                <LinearLayout
                    android:layout_width="17dp"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/point_introduce"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_intro1_ctn"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:text="Tiếp tục"
                android:paddingVertical="10dp"
                android:fontFamily="@font/roboto"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:backgroundTint="@color/main_color"
                app:cornerRadius="20dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_intro1_over"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:paddingVertical="0dp"
            android:text="Bỏ qua"
            android:textColor="@color/black" />


    </LinearLayout>


</RelativeLayout>